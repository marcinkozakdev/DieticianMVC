@model DieticianMVC.Application.ViewModels.User.ListUsersForListVm

@{
    ViewData["Title"] = "Index";
}

<section class="list container h-100 d-flex flex-column">

<h1>Użytkownicy</h1>
    <hr />

    <table class="table table-striped" id="table" width="100%">
        <thead class=" thead-dark">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nazwa użytkownika
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" href="">Usuń</a>
                        <a class="btn btn-info btn-sm" href="">Edytuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>

